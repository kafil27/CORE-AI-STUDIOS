rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // User generated content
    match /users/{userId}/{allPaths=**} {
      // Allow read if user is authenticated and owns the content
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow write if user is authenticated, owns the content, and file size is under limit
      allow write: if request.auth != null 
                  && request.auth.uid == userId
                  && request.resource.size < 10 * 1024 * 1024;
      
      // Allow delete if user owns the content
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public content (like shared generations)
    match /public/{allPaths=**} {
      allow read: if true;  // Anyone can read public content
      allow write: if request.auth != null;  // Only authenticated users can write
    }
    
    // Temporary storage for processing
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
} 